<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.jwl.sns.user.dao.UserDAO">
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO
 			`user`
 		(
 			`loginId`
 			, `password`
 			, `name`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUE
 		(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, #{email}
 			, now()
 			, now()
 		)
 		
 	</insert>
 	
 	<select id="selectUserById" parameterType="string" resultType="int">
 		SELECT
 			count(1)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<select id="selectUser" parameterType="map" resultType="com.jwl.sns.user.model.User">
 		SELECT
	 		`id`
	 		, `loginId`
	 		, `password`
	 		, `name`
	 		, `email`
	 		, `createdAt`
	 		, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `password` = #{password}
 			
 	</select>
 	
 	<select id="selectUserByIdp" parameterType="int" resultType="com.jwl.sns.user.model.User">
 		SELECT
 			`id`
	 		, `loginId`
	 		, `password`
	 		, `name`
	 		, `email`
	 		, `createdAt`
	 		, `updatedAt`
	 	FROM
	 		`user`
	 	WHERE
	 		`id` = #{id}
 	</select>
 </mapper>